  body
    .wrapper
      div.container.page
        div.pull-right
          a(href="/") Return to home page
        div.page-header
          h1 #{studios.length} studios in 
            span.highlight #{location} 
            if(budget)
              span under 
              span.highlight $#{budget}
          ul.studios
            each studio in studios
              li.row
                div.col-xs-12.col-md-2.profile-photo
                  - if (studio.logo)
                    a(href="#{studio.web}" target="_blank")
                      img(src="#{studio.logo}")
                  - else
                    img(src="images/studio-placeholder.png")
                div.col-xs-12.col-md-3
                  a(href="#{studio.web}" target="_blank").strong #{studio.name}
                div.col-xs-12.col-md-4
                  p #{studio.address}
                  a(href="tel:"+studio.phone) #{studio.phone}
                div.col-xs-12.col-md-3
                  //- p #{studio._id}
                  - if(!studio.price)
                    p Please call for rate
                  - else
                    p 
                      span.dollar-sign $
                      span.super-strong #{studio.price}
                      span.unit /hr
                  - if (studio.extra)
                    p * #{studio.extra}
                  - if (studio.hoursMin)
                    p * Must book minimum #{studio.hoursMin} hours
